<script>
    function writeIt() {
        var hour = new Date().getHours();
        var timeOfDay;
        if (hour > 7 && hour < 12) {
            document.write("Good Morning");
        } else if (hour >= 12 && hour < 18) {
            document.write("Good Afternoon");
        } else {
            document.write("Good Night");
        }

    }
    document.getElementById("time").onload = writeIt();

</script>
